{
  "extends": "@squircle-js/tsconfig/react-library.json",
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "noImplicitAny": false,
    "lib": ["es2016", "dom", "es5"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "src/*.ts",
    "src/*.tsx"
  ],
  "exclude": ["node_modules", "**/tests/*"]
}
